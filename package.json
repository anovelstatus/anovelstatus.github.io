{
	"name": "a-novel-status",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"prettier": "prettier . --check",
		"prettier-fix": "prettier . --write",
		"lint": "eslint",
		"lint-fix": "eslint --fix",
		"website": "cd website && vite",
		"build-website": "cd website && tsc -b && vite build",
		"build-api": "cd api && tsc && node build.ts",
		"config-api": "node config-clasp.ts api",
		"deploy-api": "clasp --project api/dist/.clasp.json push -f && clasp --project api/dist/.clasp.json update-deployment $DEPLOYMENT_ID",
		"build-spreadsheet": "cd spreadsheet && tsc && node build.ts",
		"config-spreadsheet": "node config-clasp.ts spreadsheet",
		"deploy-spreadsheet": "clasp --project spreadsheet/dist/.clasp.json push",
		"test-spreadsheet": "cd spreadsheet && vitest"
	},
	"devDependencies": {
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@eslint/eslintrc": "^3.3.3",
		"@eslint/js": "^9.39.1",
		"@google/clasp": "^3.1.3",
		"@mui/icons-material": "^7.3.6",
		"@mui/material": "^7.3.5",
		"@tanstack/eslint-plugin-router": "^1.139.0",
		"@tanstack/react-query": "^5.90.11",
		"@tanstack/react-query-devtools": "^5.91.1",
		"@tanstack/react-router": "^1.139.12",
		"@tanstack/react-router-devtools": "^1.139.12",
		"@tanstack/react-table": "^8.21.3",
		"@tanstack/router-devtools": "^1.139.12",
		"@tanstack/router-plugin": "^1.139.12",
		"@types/google-apps-script": "2.0.8",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.1",
		"dotenv": "^17.2.3",
		"es-toolkit": "^1.42.0",
		"esbuild": "0.27.0",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^16.5.0",
		"material-ui-popup-state": "^5.3.6",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^7.2.6",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^4.0.14"
	}
}
